@page "/checkbox"
@using ShadcnBlazor.Test.UI.Components

<div class="mt-8 mx-8 flex flex-col gap-y-3">
    <div class="flex items-center gap-3">
        <Checkbox id="terms" />
        <label class="label" for="terms">Accept terms and conditions</label>
    </div>
    
    <div class="flex items-center gap-3">
        <Checkbox id="terms-2" IsChecked="true" />
        <div class="grid gap-2">
            <label class="label" for="terms-2">Accept terms and conditions</label>
            <p class="text-muted-foreground text-sm">
                By clicking this checkbox, you agree to the terms and conditions.
            </p>
        </div>
    </div>
    
    <div class="flex items-center gap-3">
        <Checkbox id="toggle" CssClasses="peer" disabled="disabled">
        </Checkbox>
        <label class="label" for="toggle">Enable notifications</label>
    </div>
    
    <label for="toggle-2" class="label hover:bg-accent/50 flex items-start gap-3 rounded-lg border p-3 has-[[aria-checked=true]]:border-blue-600 has-[[aria-checked=true]]:bg-blue-50 dark:has-[[aria-checked=true]]:border-blue-900 dark:has-[[aria-checked=true]]:bg-blue-950">
        <Checkbox
            id="toggle-2"
            CssClasses="data-[state=checked]:border-blue-600 data-[state=checked]:bg-blue-600 data-[state=checked]:text-white dark:data-[state=checked]:border-blue-700 dark:data-[state=checked]:bg-blue-700" />
        <div class="grid gap-1.5 font-normal">
            <p class="text-sm leading-none font-medium">
                Enable notifications
            </p>
            <p class="text-muted-foreground text-sm">
                You can enable or disable notifications at any time.
            </p>
        </div>
    </label>
</div>