@page "/dialog"
@using ShadcnBlazor.Dialogs
@using ShadcnBlazor.Buttons
@using ShadcnBlazor.Inputs
@using ShadcnBlazor.Labels

<Dialog IsOpen="true">
    <form>
        <DialogTrigger>
            <Slot>
                <Button Variant="ButtonVariant.Outline" @attributes="context">Open Dialog</Button>
            </Slot>
        </DialogTrigger>
        <DialogContent ClassName="sm:max-w-[425px]">
            <DialogHeader>
                <DialogTitle>Edit profile</DialogTitle>
                <DialogDescription>
                    Make changes to your profile here. Click save when you&apos;re
                    done.
                </DialogDescription>
            </DialogHeader>
            <div class="grid gap-4">
                <div class="grid gap-3">
                    <Label>Name</Label>
                    <InputField name="name" Value="Pedro Duarte" />
                </div>
                <div class="grid gap-3">
                    <Label>Username</Label>
                    <InputField name="username" Value="@("@peduarte")" />
                </div>
            </div>
            <DialogFooter>
                <DialogClose>
                    <Slot>
                        <Button Variant="ButtonVariant.Outline" @attributes="context">Cancel</Button>
                    </Slot>
                </DialogClose>
                <Button type="submit">Save changes</Button>
            </DialogFooter>
        </DialogContent>
    </form>
</Dialog>