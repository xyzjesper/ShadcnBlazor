@page "/dialog"
@using ShadcnBlazor.Dialogs
@using ShadcnBlazor.Buttons

<Dialog IsOpen="true">
    <form>
        <DialogTrigger>
            <Slot>
                <Button Variant="ButtonVariant.Outline" @attributes="context">Open Dialog</Button>
            </Slot>
        </DialogTrigger>
        <DialogContent ClassName="sm:max-w-[425px]">
            <DialogHeader>
                <DialogTitle>Edit profile</DialogTitle>
                <DialogDescription>
                    Make changes to your profile here. Click save when you&apos;re
                    done.
                </DialogDescription>
            </DialogHeader>
            <div class="grid gap-4">
                <div class="grid gap-3">
                    <label class="label" for="name-1">Name</label>
                    <input class="input" id="name-1" name="name" defaultValue="Pedro Duarte" />
                </div>
                <div class="grid gap-3">
                    <label class="label" for="username-1">Username</label>
                    <input class="input" id="username-1" name="username" defaultValue="@@peduarte" />
                </div>
            </div>
            <DialogFooter>
                <DialogClose>
                    <Slot>
                        <Button Variant="ButtonVariant.Outline" @attributes="context">Cancel</Button>
                    </Slot>
                </DialogClose>
                <Button type="submit">Save changes</Button>
            </DialogFooter>
        </DialogContent>
    </form>
</Dialog>