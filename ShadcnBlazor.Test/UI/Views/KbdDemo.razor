@page "/kbd"
@using ShadcnBlazor.Kbds

<div class="mt-8 mx-8">
    <div class="flex flex-col items-center gap-4">
        <KbdGroup>
            <Kbd>⌘</Kbd>
            <Kbd>⇧</Kbd>
            <Kbd>⌥</Kbd>
            <Kbd>⌃</Kbd>
        </KbdGroup>
        <KbdGroup>
            <Kbd>Ctrl</Kbd>
            <span>+</span>
            <Kbd>B</Kbd>
        </KbdGroup>
    </div>
</div>

<div class="mt-8 mx-8">
    <div class="flex flex-col items-center gap-4">
        <p class="text-muted-foreground text-sm">
            Use
            <KbdGroup>
                <Kbd>Ctrl + B</Kbd>
                <Kbd>Ctrl + K</Kbd>
            </KbdGroup>
            to open the command palette
        </p>
    </div>
</div>