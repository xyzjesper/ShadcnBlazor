@using ShadcnBlazor.Interop
@using ShadcnBlazor.Menu

@inherits ShadcnBase

<MenuContent PositionCallback="GetPositionAsync">
    <div data-slot="menubar-content"
         data-state="@(Menu.IsOpen ? "open" : "closed")"
         align="@Align.ToString().ToLowerInvariant()"
         class="@Classes"
         @attributes="Props">
        @ChildContent
    </div>    
</MenuContent>

@code
{
    [CascadingParameter(Name = "Menu")] public Menu Menu { get; set; }
    
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public PositionAlignment Align { get; set; } = PositionAlignment.Start;
    [Parameter] public double SideOffset { get; set; } = 8;

    private string? Classes;

    protected override void OnParametersSet()
    {
        Classes = Cn(
            "bg-popover text-popover-foreground data-[state=open]:animate-in data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0 data-[state=closed]:zoom-out-95 data-[state=open]:zoom-in-95 data-[side=bottom]:slide-in-from-top-2 data-[side=left]:slide-in-from-right-2 data-[side=right]:slide-in-from-left-2 data-[side=top]:slide-in-from-bottom-2 z-50 min-w-[12rem] origin-(--radix-menubar-content-transform-origin) overflow-hidden rounded-md border p-1 shadow-md",
            ClassName
        );
    }

    private async Task<PositionService.Position> GetPositionAsync(ElementReference menuElement)
    {
        return new PositionService.Position(0, 0);
    }
}
