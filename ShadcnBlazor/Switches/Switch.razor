@inherits ShadcnBase

<button data-slot="switch"
        class="@Classes"
        type="button"
        data-state="@(Value ? "checked" : "unchecked")"
        disabled="@Disabled"
        @onclick="ToggleAsync"
     @attributes="Props">
    <div data-slot="switch-thumb"
         data-state="@(Value ? "checked" : "unchecked")"
         class="bg-background dark:data-[state=unchecked]:bg-foreground dark:data-[state=checked]:bg-primary-foreground pointer-events-none block size-4 rounded-full ring-0 transition-transform data-[state=checked]:translate-x-[calc(100%-2px)] data-[state=unchecked]:translate-x-0">
    </div>
</button>

@code
{
    #region Binder

    [Parameter]
    public bool Value
    {
        get => _value;
        set
        {
            if (_value == value) return;

            _value = value;
            ValueChanged.InvokeAsync(value);
        }
    }

    [Parameter] public EventCallback<bool> ValueChanged { get; set; }

    private bool _value;

    #endregion
    
    [Parameter] public bool Disabled { get; set; }
    
    private string? Classes;

    protected override void OnParametersSet()
    {
        Classes = Cn(
            "peer data-[state=checked]:bg-primary data-[state=unchecked]:bg-input focus-visible:border-ring focus-visible:ring-ring/50 dark:data-[state=unchecked]:bg-input/80 inline-flex h-[1.15rem] w-8 shrink-0 items-center rounded-full border border-transparent shadow-xs transition-all outline-none focus-visible:ring-[3px] disabled:cursor-not-allowed disabled:opacity-50",
            "hover:cursor-pointer",
            ClassName
        );
    }

    private async Task ToggleAsync()
    {
        Value = !Value;
        await InvokeAsync(StateHasChanged);
    }
}
