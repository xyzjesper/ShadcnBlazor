@inherits ShadcnBase

<div role="group"
     data-slot="button-group"
     data-orientation="@Orientation.ToString().ToLowerInvariant()"
     class="@Classes"
     @attributes="Props">
    @ChildContent
</div>

@code
{
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public ButtonGroupOrientation Orientation { get; set; } = ButtonGroupOrientation.Horizontal;

    private string? Classes;

    protected override void OnParametersSet()
    {
        Classes = Cn(
            "flex w-fit items-stretch [&>*]:focus-visible:z-10 [&>*]:focus-visible:relative [&>[data-slot=select-trigger]:not([class*='w-'])]:w-fit [&>input]:flex-1 has-[select[aria-hidden=true]:last-child]:[&>[data-slot=select-trigger]:last-of-type]:rounded-r-md has-[>[data-slot=button-group]]:gap-2",
            GetOrientationClasses(),
            ClassName
        );
    }

    private string GetOrientationClasses()
    {
        return Orientation switch
        {
            ButtonGroupOrientation.Horizontal => "[&>*:not(:first-child)]:rounded-l-none [&>*:not(:first-child)]:border-l-0 [&>*:not(:last-child)]:rounded-r-none",
            ButtonGroupOrientation.Vertical => "flex-col [&>*:not(:first-child)]:rounded-t-none [&>*:not(:first-child)]:border-t-0 [&>*:not(:last-child)]:rounded-b-none",
            _ => throw new ArgumentOutOfRangeException()
        };
    }
}
